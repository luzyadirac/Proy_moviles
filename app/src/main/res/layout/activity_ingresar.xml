<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresarActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llayout"
        app:srcCompat="@drawable/logo_personas2" />

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="360dp"
        android:layout_height="146dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.DeviceDefault.Button.Colored"
        android:layout_width="342dp"
        android:layout_height="51dp"
        android:text="Ingresar"
        android:textColor="#3F51B5"
        android:textColorLink="#A4A4C7E3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llayout"
        app:layout_constraintBottom_toTopOf="@id/textView17"
        tools:layout_editor_absoluteY="373dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="217dp"
        android:layout_height="22dp"
        android:background="#333131"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="Al ingresar acepta los"
        android:textColor="#E8C7C7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/TyC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <TextView
        android:id="@+id/TyC"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:background="#333131"
        android:fontFamily="sans-serif-thin"
        android:text="Terminos y condiciones"
        android:textColor="#FFE8C7C7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />
</androidx.constraintlayout.widget.ConstraintLayout>